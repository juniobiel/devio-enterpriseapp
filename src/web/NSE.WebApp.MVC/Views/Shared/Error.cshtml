@model NSE.WebApp.MVC.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@{
    if (Model == null)
    {
        <div>
            <h2> Ops! Ocorreu um erro, mas não se preocupe. Nosso time será avisado e logo o problema será resolvido</h2>
        </div>
    }
    else
    {
        ViewData["Title"] = Model.Titulo;
        <div>
            <h2> @Html.Raw(Model.Mensagem)</h2>
        </div>
    }
}